<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<meta name="viewport" content= "width=device-width, initial-scale=1.0">
		<link href="/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="/main.js"></script>
        <script type = "module" src = "/markdown.js" defer></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.4.0/showdown.min.js"></script>
	</head>
	<body>
		<header>
			<h1>Book Forum</h1>
		<nav>
			<ul>
				<li><a href="/">Home</a></li>
				{{#if authorised}}
					<li><a href="/logout">Log out</a></li>
				{{else}}
					<li><a href="/login">Log in</a></li>
				{{/if}}
				<li><a href="/register">Sign Up</a></li>
				{{#if authorised}}
            	<li><a href="/newForum">New Forum</a></li>
            	{{/if}}
			</ul>
		</nav>
		</header>
        <main>
			<article>
			{{#each infoForum}}
			<figure>
				<p> Name of the Forum: {{this.nameOfForum}}</p>
                <img src="/uploads/{{this.avatar}}">
				<p> Summary: {{this.summary}}</p>
                <p> Description:</p>
				<input type = "textarea" id = "description" value = "{{this.description}}" hidden>
				<article id = "descriptionOutput"><p><p></article>
                <p> Added: {{this.added}}</p>
                <p> Username of the person who added this forum topic: {{this.username}} </p>
				<form action="/details/{{this.IDForum}}" method="post" enctype = "multipart/form-data">
				<label>New Comment: </label>
                	<textarea name= "comment" id = "comment" required/></textarea><br>
				<label><input type = "submit" name="submit" /></a></label>
				</form>
				{{#each ../comment}}
				<hr>
				<p> Comment: {{this.comment}}</p>
				<p> Username of posted comment: {{this.username}}</p>
				<p> Added Comment: {{this.added}}<p>
				{{/each}}
			</figure>
			{{/each}}
			</article>
		</main>
	</body>
</html>